generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Bookmaker {
    id        String   @id @default(cuid())
    name      String   @unique
    slug      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    leagueLinks BookmakerLeague[]
    sportLinks  BookmakerSport[]
}

model Sport {
    id        String   @id @default(cuid())
    name      String   @unique
    slug      String   @unique
    icon      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    leagues        League[]
    bookmakerLinks BookmakerSport[]
}

model League {
    id        String   @id @default(cuid())
    name      String
    slug      String
    sport     Sport    @relation(fields: [sportId], references: [id])
    sportId   String
    country   Country  @relation(fields: [countryId], references: [id])
    countryId String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    bookmakerLinks BookmakerLeague[]

    @@unique([slug, sportId], name: "sport_league_slug")
}

model Country {
    id        String   @id @default(cuid())
    name      String   @unique
    slug      String   @unique
    icon      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    leagues League[]
}

model BookmakerSport {
    bookmaker   Bookmaker @relation(fields: [bookmakerId], references: [id])
    bookmakerId String
    sport       Sport     @relation(fields: [sportId], references: [id])
    sportId     String
    external_id String
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    @@id([bookmakerId, sportId])
    @@index([sportId])
    @@index([bookmakerId])
}

model BookmakerLeague {
    bookmaker   Bookmaker @relation(fields: [bookmakerId], references: [id])
    bookmakerId String
    league      League    @relation(fields: [leagueId], references: [id])
    leagueId    String
    external_id String
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    @@id([bookmakerId, leagueId])
    @@index([leagueId])
    @@index([bookmakerId])
}
