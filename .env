# ──────────────
# RUNTIME CONFIG
# ──────────────
NODE_ENV=development
LOG_LEVEL=debug

HOST=0.0.0.0
PORT=3000

# ──────────────
# API CONFIG
# ──────────────
API_PREFIX=/api
TRUST_PROXY=false          # true only behind nginx/coolify proxy

# ──────────────
# SECURITY
# ──────────────
ENABLE_CORS=true            # dev front & API often run on different ports
ENABLE_HELMET=false         # disable in dev (makes debugging easier)
RATE_LIMIT_MAX=0            # 0 disables rate-limit in dev
RATE_LIMIT_WINDOW=1 minute

# ──────────────
# DATABASE
# ──────────────
DATABASE_URL=postgresql://louwis:password@localhost:5432/flashco?schema=public
RUN_MIGRATIONS=false        # you’ll run `prisma migrate dev` manually in dev

# ──────────────
# OPTIONALS
# ──────────────
# any API keys, mailer configs, etc.