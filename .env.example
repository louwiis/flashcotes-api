# ──────────────
# RUNTIME CONFIG
# ──────────────
NODE_ENV=production
LOG_LEVEL=info

HOST=0.0.0.0
PORT=3000

# ──────────────
# API CONFIG
# ──────────────
API_PREFIX=/api
TRUST_PROXY=true           # true only behind nginx/coolify proxy

# ──────────────
# SECURITY
# ──────────────
ENABLE_CORS=false           # dev front & API often run on different ports
ENABLE_HELMET=true          # disable in dev (makes debugging easier)
RATE_LIMIT_MAX=100          # 0 disables rate-limit in dev
RATE_LIMIT_WINDOW=1 minute

# ──────────────
# DATABASE
# ──────────────
DATABASE_URL=postgresql://user:pass@your-prod-db:5432/postgres?schema=public
RUN_MIGRATIONS=true         # you’ll run `prisma migrate dev` manually in dev

# ──────────────
# OPTIONALS
# ──────────────
# any API keys, mailer configs, etc.